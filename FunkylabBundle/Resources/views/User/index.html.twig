{% extends 'TigreboiteFunkylabBundle::layout.html.twig' %}

{% block action %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
     <a class="btn btn-default btn-lg" href="#" data-toggle="modal" data-url="{{ path('admin_user_new') }}">
        <i class="fa fa-plus"></i> Add user
    </a>

    <a class="btn btn-default btn-lg" href="{{ path('admin_user_export') }}">
        <i class="fa fa-download"></i> Export
    </a>
    {% endif %}
{% endblock %}

{% block content -%}

    <div class="box-body table-responsive no-padding">

        <table id="table_admin" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Lastname</th>
                    <th>Firstname</th>
                    <th>nbPointsCurrent</th>
                    <th>Archived</th>
                    <th class="action"></th>
                </tr>
            </thead>

        </table>
    </div>

{% endblock %}

{% block js %}
<script>
    $('document').ready(function()
    {
        table = $('#table_admin').DataTable( {
            "processing": true,
            "serverSide": true,
            "ajax": Routing.generate('admin_user_list'),
            "aoColumns": [    
                { "sName": "id" },
                { "sName": "lastname" },
                { "sName": "firstname" },
                { "sName": "nbPointsCurrent" },
                { "sName": "isarchived" },
                { "sName": "action" }
            ],
            "columnDefs": [ {
                "targets": -1,
                "data": null,
                'bSortable': false, 'aTargets': [ 1 ]
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                ,"defaultContent": '<div class="btn-group pull-right">' +
                '<a class="btn btn-info btn-sm btn-edit" href="#" data-toggle="modal" data-url=""><i class="fa fa-edit"></i> Edit</a>' +
                '<a class="btn btn-danger btn-sm btn-archive-action" href="#"><i class="fa fa-archive"></i> Archive</a>' +
                '<a class="btn btn-success btn-sm btn-unarchive-action" href="#"><i class="fa fa-check"></i> Unarchive</a>' +
                '</div>'
                {% else %}
                ,"defaultContent": '<div class="btn-group pull-right">' +
                '<a class="btn btn-info btn-sm btn-edit" href="#" data-toggle="modal" data-url=""><i class="fa fa-eye"></i> View</a>' +
                '</div>'
                {% endif %}
            }],
            "oLanguage": {
                "sProcessing": "<img src='/bundles/tigreboitefunkylab/images/ajax-loader.gif'>"
            },
            "fnDrawCallback": function( oSettings ) {
              updateModalBtn();
            },
            "fnCreatedRow": function( nRow, aData, iDataIndex ) {
                var url_update = Routing.generate('admin_user_edit', {id:aData[aData.length-1]});
                $(nRow).find('td:last .btn-edit').attr('data-url', url_update);

                var num_col_isarchived = 4;
                if(aData[num_col_isarchived] != "")
                {
                    $('td:eq('+num_col_isarchived+')', nRow).html( "yes" );
                    $(nRow).find('td:last .btn-archive-action').hide();
                }else{
                    $('td:eq('+num_col_isarchived+')', nRow).html( "-" );
                    $(nRow).find('td:last .btn-unarchive-action').hide();
                }

            }
        });

        // Archive btn
        $('#table_admin tbody').on( 'click', '.btn-archive-action', function (e) {
            e.preventDefault();
            var data = table.row( $(this).parents('tr') ).data();
            var id_line = data[data.length-1];

            $.confirm({
                text: "Are you sure you want to archive ?",
                confirm: function(button) {
                    $.ajax({
                        url: Routing.generate('admin_user_archive', {id:id_line}),
                        success: function(msg){
                            table.draw();
                        }
                    });
                },
                cancel: function(button) {
                    // do something
                }
            });
        });

        // Unarchive btn
        $('#table_admin tbody').on( 'click', '.btn-unarchive-action', function (e) {
            e.preventDefault();
            var data = table.row( $(this).parents('tr') ).data();
            var id_line = data[data.length-1];

            $.confirm({
                text: "Are you sure you want to unarchive ?",
                confirm: function(button) {
                    $.ajax({
                        url: Routing.generate('admin_user_unarchive', {id:id_line}),
                        success: function(msg){
                            table.draw();
                        }
                    });
                },
                cancel: function(button) {
                    // do something
                }
            });
        });
    });
</script>
{% endblock %}
