<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Funkylab | {% block title %}{% endblock %}</title>
    {% block head %}{% endblock %}
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    <link href="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/css/ionicons.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/css/AdminLTE.css') }}" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-black">
<!-- header logo: style can be found in header.less -->
<header class="header">
    <a href="{{ path('funkylab_home') }}" class="logo">Funkylab</a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <div class="navbar-right">
            <ul class="nav navbar-nav">
                {#
                    {{  include('TigreboiteFunkylabBundle:Helper:message.html.twig', {}) }}
                    {{  include('TigreboiteFunkylabBundle:Helper:notification.html.twig', {}) }}
                    {{  include('TigreboiteFunkylabBundle:Helper:task.html.twig', {}) }}
                #}

                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>{{ app.user.firstName }} {{ app.user.lastName }} <i class="caret"></i></span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header bg-light-blue">
                            <img src="{{ asset('bundles/tigreboitefunkylab/images/user.png') }}" class="img-circle" alt="User Image" />
                            <p>
                                {{ app.user.firstName }} {{ app.user.lastName }}
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('tigreboite_funkylab_admin_logout') }}" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
<div class="wrapper row-offcanvas row-offcanvas-left">
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="left-side sidebar-offcanvas">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ asset('bundles/tigreboitefunkylab/images/user.png') }}" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.firstName }}</p> <p>{{ app.user.lastName }}</p>
                </div>
            </div>

            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="{%  if app.request.attributes.get('_route') == 'funkylab_home' %}active{% endif %}">
                    <a href="{{ path('funkylab_home') }}">
                        <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                    </a>
                </li>
                <li class="treeview {%  if app.request.attributes.get('_template').get('controller') == 'System' %}active {% endif %}">
                    <a href="#">
                        <i class="fa fa-bar-chart-o"></i>
                        <span>Systeme</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{%  if app.request.attributes.get('_route') == 'funkylab_system_manager' %}active{% endif %}">
                            <a href="{{ path('funkylab_system_manager') }}"><i class="fa fa-angle-double-right"></i> Maintenance</a></li>
                        <li class="{%  if app.request.attributes.get('_route') == 'funkylab_system_users' %}active{% endif %}">
                            <a href="{{ path('funkylab_system_users') }}"><i class="fa fa-angle-double-right"></i> Utilisateurs</a></li>
                        <li class="{%  if app.request.attributes.get('_route') == 'funkylab_system_files' %}active{% endif %}">
                            <a href="{{ path('funkylab_system_files') }}"><i class="fa fa-angle-double-right"></i> Gestionnaire de fichier</a></li>
                        <li class="{%  if app.request.attributes.get('_route') == 'funkylab_system_languages' %}active{% endif %}">
                            <a href="{{ path('funkylab_system_languages') }}"><i class="fa fa-angle-double-right"></i> Langues</a></li>
                    </ul>
                </li>

                <li class="{%  if app.request.attributes.get('_route') == 'funkylab_about' %}active{% endif %}">
                    <a href="{{ path('funkylab_about') }}">
                        <i class="fa fa-info"></i> <span>Ã€ propos</span>
                    </a>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            {% block breadcrumb %}{% endblock %}
        </section>
        <!-- Main content -->
        <section class="content">
            {% block content %}{% endblock %}
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
</div><!-- ./wrapper -->

<!-- jQuery 2.0.2 -->
<script src="{{ asset('bundles/tigreboitefunkylab/vendor/jquery-2.1.1.min.js') }}"></script>
<!-- Bootstrap -->
<script src="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/js/bootstrap.min.js') }}" type="text/javascript"></script>
<!-- AdminLTE App -->
<script src="{{ asset('bundles/tigreboitefunkylab/vendor/admin-lte/js/AdminLTE/app.js') }}" type="text/javascript"></script>

</body>
</html>