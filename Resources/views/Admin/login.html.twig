{% extends 'TigreboiteFunkylabBundle::layout.html.twig' %}

{% block head %}
{% endblock %}

{% block content %}
    <div class="container">
        <h4>Inwi Business administrateur</h4>
        <form role="form" action="{{ path('fos_user_security_check') }}" method="post" novalidate="novalidate" >
            {% if login_error is defined %}{{ login_error }}{% endif %}
            <div class="form-group has-success has-feedback">
                <label class="control-label" for="login">Identifiant</label>
                <input type="text" name="_username" class="form-control" id="login">
            </div>
            <div class="form-group has-warning has-feedback">
                <label class="control-label" for="pass">Mot de passe</label>
                <input type="password" name="_password" class="form-control" id="pass">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <button type="submit" class="btn btn-danger">Connexion</button>
        </form>
    </div>
{% endblock %}