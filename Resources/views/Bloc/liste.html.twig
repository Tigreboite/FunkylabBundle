{% for entity in entities %}
    <li id="item-{{ entity.id }}">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.layout }}</td>
                    <td>
                        <div class="btn-group pull-right">
                            <a class="btn btn-warning btn-sm" href="#" data-toggle="modal"
                               data-url="{{ path('admin_bloc_edit', { 'id': entity.id }) }}"><i
                                        class="fa fa-edit"></i> {{ "funkylab.btn.edit"|trans }}</a>
                            <a class="btn btn-danger btn-sm btn-remove" href="#"
                               data-url="{{ path('admin_bloc_delete', { 'id': entity.id }) }}"><i
                                        class="fa fa-times-circle"></i> {{ "funkylab.btn.delete"|trans }}</a>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </li>
{% endfor %}
