{% extends '@TigreboiteFunkylab/layout.html.twig' %}

{% block action %}
    <a class="btn btn-default btn-lg" href="{{ url_type }}">
        <i class="fa fa-backward"></i> {{ "funkylab.btn.back"|trans }}
    </a>
    <a id="btn-add" class="btn btn-default btn-lg" href="#" data-toggle="modal" data-url="{{ path('admin_bloc_new',{type:type,id:id}) }}">
        <i class="fa fa-plus"></i> {{ "funkylab.btn.add"|trans }}
    </a>
{% endblock %}

{% block content -%}
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{ "funkylab.bloc.title"|trans }}</th>
                        <th>{{ "funkylab.bloc.layout"|trans }}</th>
                        <th></th>
                    </tr>
                    </thead>
                </table>
            </div>
            <ul class="sortable" id="contentSort">
                <div class="box box-info">
                    <div class="box-body">
                        <div class="callout callout-info">
                            <h4>{{ "funkylab.loading"|trans }}...</h4>
                            <p>{{ "funkylab.pleasewait"|trans }}</p>
                        </div>
                    </div><!-- /.box-body -->
                </div>
            </ul>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        var block_type = "{{ type }}";
        var entity_id = "{{ id }}";

        $(document).ready(function()
        {
            refreshAppList({type:block_type,id:entity_id});
        });

    </script>

    <script src="{{ asset('bundles/tigreboitefunkylab/js/sortable.js') }}" type="text/javascript"></script>
{% endblock %}
