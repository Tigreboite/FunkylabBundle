{% extends 'TigreboiteFunkylabBundle::layout.html.twig' %}

{% block action %}
     <a class="btn btn-default btn-lg" href="#" data-toggle="modal" data-url="{{ path('admin_actuality_new') }}">
        <i class="fa fa-plus"></i> {{ "funkylab.btn.add"|trans }}
    </a>
{% endblock %}

{% block content -%}
    <div class="box-body table-responsive no-padding">
        <table id="table_admin" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>{{ "funkylab.news.title"|trans }}</th>
                    {#<th>{{ "funkylab.news.category"|trans }}</th>#}
                    <th>{{ "funkylab.news.tags"|trans }}</th>
                    <th>{{ "funkylab.news.published"|trans }}</th>
                    <th>{{ "funkylab.news.first"|trans }}</th>
                    <th>{{ "funkylab.news.url"|trans }}</th>
                    <th>{{ "funkylab.news.date.published"|trans }}</th>
                    <th>{{ "funkylab.news.date.created"|trans }}</th>
                    <th>{{ "funkylab.news.date.updated"|trans }}</th>
                    <th class="action"></th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}

{% block js %}
<script type="text/javascript">

    $('document').ready(function()
    {
        table = $('#table_admin').DataTable( {
            "processing": true,
            "serverSide": true,
            "autoWidth":true,
            "ajax": Routing.generate('admin_actuality_list'),
            "aoColumns": [
                { "sName": "title" },
//                { "sName": "category" },
                { "sName": "tags" },
                { "sName": "published" },
                { "sName": "mea" },
                { "sName": "slug" },
                { "sName": "dateStart" },
                { "sName": "createdAt" },
                { "sName": "updatedAt" },
                { "sName": "_action" }
            ],
            "columnDefs": [ {
                "targets": -1,
                "data": null,
                'bSortable': false, 'aTargets': [ 1 ],
                "defaultContent": '' +
                '<div class="btn-group">'+
                    '<button type="button" class="btn btn-default">Action</button>'+
                    '<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">'+
                        '<span class="caret"></span>'+
                        '<span class="sr-only">Toggle Dropdown</span>'+
                    '</button>'+
                    '<ul class="dropdown-menu" role="menu">'+
                    '<li>'+
                    '   <a class="btn-editblock" href="#">' +
                    '       <i class="fa fa-plus-square-o"></i>Blocs' +
                    '   </a>' +
                    '</li>'+
                    '<li>'+
                    '   <a class="btn-edit" href="#" data-toggle="modal" data-url="">' +
                    '       <i class="fa fa-edit"></i>{{ "funkylab.btn.edit"|trans }}' +
                    '   </a>' +
                    '</li>'+
                    '<li>'+
                    '   <a class="btn-remove" href="#">' +
                    '       <i class="fa fa-remove"></i>{{ "funkylab.btn.delete"|trans }}' +
                    '   </a>' +
                    '</li>'+
                    '</ul>'+
                '</div>'
            }],
            "oLanguage": {
                "sProcessing": "<img src='{{ asset('bundles/tigreboitefunkylab/images/ajax-loader.gif') }}'>"
            },
            "fnDrawCallback": function( oSettings ) {
              updateModalBtn();
            },
            "fnCreatedRow": function( nRow, aData, iDataIndex ) {

                var url_bloc = Routing.generate('admin_bloc', {id:aData[aData.length-1],type:"actuality"});
                $(nRow).find('td:last .btn-editblock').attr('href', url_bloc);

                var url_update = Routing.generate('admin_actuality_edit', {id:aData[aData.length-1]});
                $(nRow).find('td:last .btn-edit').attr('data-url', url_update);

            }
        });

        // BTN EVENT
        $('#table_admin tbody').on( 'click', '.btn-remove', function (e) {
            e.preventDefault();
            var data = table.row( $(this).parents('tr') ).data();
            var id_line = data[data.length-1];

            $.confirm({
                text: '{{ "funkylab.confirm.delete"|trans }}',
                confirm: function(button) {
                    $.ajax({
                        url: Routing.generate('admin_actuality_delete', {id:id_line}),
                        method: 'DELETE',
                        success: function(msg){
                            table.draw();
                        }
                    });
                }
            });
        });

    });
</script>
{% endblock %}
