{% extends 'TigreboiteFunkylabBundle::layout.html.twig' %}

{% block action %}
     <a class="btn btn-default btn-lg" href="#" data-toggle="modal" data-url="{{ path('%admin_entity_path%_new') }}">
        <i class="fa fa-plus"></i> Add %admin_entity_name%
    </a>
{% endblock %}

{% block content -%}
    <div class="box-body table-responsive no-padding">
        <table id="table_admin" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    %datagrid_entity_fields%
                    <th class="action"></th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}

{% block js %}
<script type="text/javascript">

    $('document').ready(function()
    {
        table = $('#table_admin').DataTable( {
            "processing": true,
            "serverSide": true,
            "autoWidth":true,
            "ajax": Routing.generate('%admin_entity_path%_list'),
            "aoColumns": [
                %sname_fields%,
                { "sName": "_action" }
            ],
            "columnDefs": [ {
                "targets": -1,
                "data": null,
                'bSortable': false, 'aTargets': [ 1 ],
                "defaultContent": '<div class="btn-group pull-right"><a class="btn btn-info btn-sm btn-edit" href="#" data-toggle="modal" data-url=""><i class="fa fa-edit"></i> Edit</a><a class="btn btn-danger btn-sm btn-remove" href="#" data-url="%admin_entity_path%_delete"><i class="fa fa-edit"></i> Delete</a> </div>'
            }],
            "oLanguage": {
                "sProcessing": "<img src='/bundles/tigreboitefunkylab/images/ajax-loader.gif'>"
            },
            "fnDrawCallback": function( oSettings ) {
              updateModalBtn();
            },
            "fnCreatedRow": function( nRow, aData, iDataIndex ) {

                var url_update = Routing.generate('%admin_entity_path%_edit', {id:aData[aData.length-1]});
                $(nRow).find('td:last .btn-edit').attr('data-url', url_update);

                var url_delete = Routing.generate('%admin_entity_path%_delete', {id:aData[aData.length-1]});
                $(nRow).find('td:last .btn-remove').attr('data-url', url_delete);

            }
        });

    });
</script>
{% endblock %}
