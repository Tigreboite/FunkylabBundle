{% extends 'TigreboiteFunkylabBundle::layout.html.twig' %}


{% block title %}Platforms{% endblock %}

{% block head %}
{% endblock %}

{% block breadcrumb %}
    <h1>
        <i class="fa fa-mobile"></i><i class="fa fa-tablet"></i> Platforms
        <small>Liste</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('funkylab_home') }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-mobile"></i> <i class="fa fa-tablet"></i> Platforms</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-9">
                <a id="btn-add-platform" class="btn btn-default btn-lg disabled" href="#" data-toggle="modal" data-url="{{ path('admin_application_new') }}">
                    <i class="fa fa-plus"></i> Ajouter une application
                </a>
            </div>
        </div>
        <br />
        <div class="box">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Indispensable</th>
                        <th>Offre</th>
                        <th></th>
                    </tr>
                    </thead>
                </table>
            </div>

            <ul class="sortable" id="contentSort">
                <div class="box box-info">
                    <div class="box-body">
                        <div class="callout callout-info">
                            <h4>Chargement...</h4>
                            <p>Veuillez patienter</p>
                        </div>
                    </div><!-- /.box-body -->
                </div>
            </ul>
        </div>
    </div>
{% endblock %}


{% block js %}
    <script src="{{ asset('bundles/tigreboitefunkylab/js/platform.js') }}" type="text/javascript"></script>
{% endblock %}