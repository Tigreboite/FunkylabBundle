{% for entity in entities %}
    <li id="item-{{ entity.id }}">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        %sortable_entity_values%
                        <td>
                            <div class="btn-group pull-right">
                                <a class="btn btn-info btn-sm" href="#" data-toggle="modal" data-url="{{ path('%admin_entity_path%_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editer</a>
                                <a class="btn btn-danger btn-sm" href="#" data-toggle="modal" data-url="{{ path('%admin_entity_path%_delete', { 'id': entity.id }) }}"><i class="fa fa-times-circle"></i> Effacer</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </li>
{% endfor %}
